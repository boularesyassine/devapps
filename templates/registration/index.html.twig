{% extends 'baseFront.html.twig' %}


{% block body %}

    <div class="container">

        <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                        <div class="d-flex justify-content-center py-4">
                            <a href="index.html" class="logo d-flex align-items-center w-auto">
                           
                            </a>
                        </div><!-- End Logo -->

                        <div class="card mb-3">

                            <div class="card-body">

                                <div class="pt-4 pb-2">
                                    <h5 class="card-title text-center pb-0 fs-4">Create an Account</h5>
                                    <p class="text-center small">Enter your personal details to create account</p>
                                </div>


                                {{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
                                <div class="col-12">
                                        <label for="yourName" class="form-label">Your Name</label>

                                        <div class="invalid-feedback">Please, enter your name!</div>
                                    {{ form_widget(form.nom,{'attr':{'class':'form-control'}}) }}
                                    {{ form_errors(form.nom,{ 'attr':{'class':'text-danger'}}) }}

                                </div>
 <div class="col-12">
                                        <label for="yourName" class="form-label">Your prenom</label>

                                        <div class="invalid-feedback">Please, enter your prenom!</div>
                                    {{ form_widget(form.prenom,{'attr':{'class':'form-control'}}) }}
                                    {{ form_errors(form.prenom,{ 'attr':{'class':'text-danger'}}) }}

                                </div>
                                    <div class="col-12">
                                        <label for="yourEmail" class="form-label">Your Email</label>
                                        {{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}
                                        {{ form_errors(form.email,{ 'attr':{'class':'text-danger'}}) }}
                                        <div class="invalid-feedback">Please enter a valid Email adddress!</div>
                                    </div>



                                    <div class="col-12">
                                        <label for="yourPassword" class="form-label">Password</label>
                                        {{ form_widget(form.password,{'attr':{'class':'form-control'}}) }}
                                        {{ form_errors(form.password,{ 'attr':{'class':'text-danger'}}) }}
                                        <div class="invalid-feedback">Please enter your password!</div>
                                    </div>

<div class="col-12">
                                        <label for="youradresse" class="form-label">Your adresse</label>
                                        {{ form_widget(form.adresse,{'attr':{'class':'form-control'}}) }}
                                        {{ form_errors(form.adresse,{ 'attr':{'class':'text-danger'}}) }}
                                        <div class="invalid-feedback">Please enter a valid adresse</div>
                                    </div>
                              
<div class="col-12">
                                        <label for="youradresse" class="form-label">Your age</label>
                                        {{ form_widget(form.age,{'attr':{'class':'form-control'}}) }}
                                        {{ form_errors(form.age,{ 'attr':{'class':'text-danger'}}) }}
                                        <div class="invalid-feedback">Please enter a valid age</div>
                                    </div>
                           <div class="col-12">
                                        <label for="youradresse" class="form-label">Your username</label>
                                        {{ form_widget(form.username,{'attr':{'class':'form-control'}}) }}
                                        {{ form_errors(form.username,{ 'attr':{'class':'text-danger'}}) }}
                                        <div class="invalid-feedback">Please enter a valid age</div>
                                    </div>
    <div class="col-12">
                                        <label for="youradresse" class="form-label">Your photo</label>
                                        {{ form_widget(form.photo,{'attr':{'class':'form-control'}}) }}
                                        {{ form_errors(form.photo,{ 'attr':{'class':'text-danger'}}) }}
                                        <div class="invalid-feedback">Please enter a valid age</div>
                                    </div>




                                    <div class="col-12">
                                        <button class="btn btn-primary w-100" type="submit">Create Account</button>
                                    </div>
                                    <div class="col-12">
                                        <p class="small mb-0">Already have an account? <a href="pages-login.html">Log in</a></p>
                                    </div>
                                    
                                {{ form_end(form) }}

                            </div>
                        </div>

                       

                    </div>
                </div>
            </div>

        </section>

    </div>

{% endblock %}