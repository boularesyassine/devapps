<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="App\Entity\Facture" table="facture">
    <indexes>
      <index name="fk4" columns="id_utilisateur"/>
    </indexes>
    <id name="idFacture" type="integer" column="id_facture">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="numero" type="integer" column="numero" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="nom" type="string" column="nom" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="prix" type="float" column="prix" precision="10" scale="0" nullable="false"/>
    <field name="date" type="date" column="date" nullable="false"/>
    <field name="etat" type="string" column="etat" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="description" type="string" column="description" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="image" type="string" column="image" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-one field="idUtilisateur" target-entity="Utilisateur" fetch="LAZY">
      <join-columns>
        <join-column name="id_utilisateur" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
